{
  "manifest_version": 3,
  "name": "Naarad AI Companion",
  "description": "Add topics to your Naarad feed directly from your browser.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_disabled.png",
      "48": "icons/icon48_disabled.png",
      "128": "icons/icon128_disabled.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
